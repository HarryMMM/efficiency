#!/bin/bash


CURRENT_DIR=$(
    cd "$(dirname "$0")" || exit
    pwd
)
# shellcheck source=../../config/system/profie
source "$CURRENT_DIR/../../config/system/profile"
SUB_CMD=$1
case "${SUB_CMD}" in
    config)
        vim "$CUSTOM_PROFILE_PATH"
    ;;
    2|3)
        echo "item = 2 or item = 3"
    ;;
    *)
        echo "default (none of above)"
    ;;
esac
